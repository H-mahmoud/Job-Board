@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    var returnUrl = @Context.Request.Query["returnurl"];
    ViewData["style"] = "background-color:rgba(0,29,56,0.8);";
}

<div class="featured_candidates_area candidate_page_padding" style="margin-top:5%;">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="background: white;padding: 30px;box-shadow: 0px 15px 12px 0px #cacaca;">
                <h4 style="text-align:center;font-family: auto;font-size: 25px;">Join Us</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-action="Login" asp-route-returnurl="@returnUrl">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email address"/>
                        <span asp-validation-for="Email" class="text-danger" style="font-size:14px"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Password"/>
                        <span style="text-align:right; font-size: 10px;"><a asp-action="ForgetPassword">Forgot your passaword?</a></span><br>
                        <span asp-validation-for="Password" class="text-danger" style="font-size:14px"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-success" />
                    </div>
                </form>
                <a asp-action="Register" style="font-size: 10px;color: gray;text-decoration:underline;">Create New Account.</a>
            </div>
        </div>
    </div>
</div>
